PORT=4000
MONGO_URI=mongodb://localhost:27017/smart-bus
JWT_SECRET=change_me
JWT_EXPIRES_IN=7d
# Comma-separated origins allowed for CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
LOCATION_HISTORY_LIMIT=50

# Speed Monitoring
# Speed threshold in km/h (default: 60 km/h)
OVERSPEED_THRESHOLD=60

# Socket.io Configuration
# Enable Socket.io for real-time updates (true/false)
ENABLE_SOCKET_IO=true
# Socket.io path (default: /socket.io)
SOCKET_IO_PATH=/socket.io

# Geofencing Configuration
# Geohash precision for spatial indexing (1-12, default: 7)
# Higher precision = more accurate but larger index
GEOHASH_PRECISION=7

# API Configuration
# Base URL for public API endpoints (used by student app)
API_BASE_URL=http://localhost:4000/api


